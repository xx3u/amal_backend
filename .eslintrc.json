{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "node",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "usePrettierrc": true
            }
        ],
        "no-unused-vars": "warn",
        "func-names": "off",
        "no-console": "off",
        "no-process-exit": "off",
        "object-shorthand": "off"
    }
}